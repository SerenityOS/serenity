diff --git a/configure b/configure
index 11622160..0e6fc25d 100755
--- a/configure
+++ b/configure
@@ -1,3 +1,3 @@
-#!/bin/sh
+#!/bin/bash
 cmake_source_dir=`cd "\`dirname \"$0\"\`";pwd`
 exec "${cmake_source_dir}/bootstrap" "$@"
