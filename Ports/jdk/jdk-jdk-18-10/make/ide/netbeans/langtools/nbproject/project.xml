                    <context>
                        <property>run.classname</property>
                        <folder>${root}/src/jdk.jshell/share/classes</folder>
                        <pattern>\.java$</pattern>
                        <format>java-name</format>
                        <arity>
                            <one-file-only/>
                        </arity>
                    </context>
                </action>
                <!--
 Note: NetBeans does not appear to support context menu items
 on shell scripts :-(
-->
