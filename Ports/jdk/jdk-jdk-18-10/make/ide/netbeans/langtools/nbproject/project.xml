                <action name="run">
                    <target>run</target>
                </action>
                <action name="run.single">
                    <target>run-single</target>
                    <context>
                        <property>run.classname</property>
                        <folder>${root}/src/jdk.base/share/classes</folder>
                        <pattern>\.java$</pattern>
                        <format>java-name</format>
                        <arity>
