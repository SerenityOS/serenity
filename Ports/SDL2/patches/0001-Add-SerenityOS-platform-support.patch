+    if (!icon) {
+        serenity_window->set_icon(nullptr);
+        return;
+    }
+
+    auto icon_bitmap = create_bitmap_from_surface(*icon);
+    if (icon_bitmap)
+        serenity_window->set_icon(icon_bitmap);
+}
